%p#notice= notice

%h1 Products

%img.logo-dashboard{:alt => "Sunzi Bistro logo", :src => "logo.jpg"}/

%table.dashboard

  %thead.dashboard

    %tr.dashboard
      %th.dashboard &nbsp &nbsp Title &nbsp &nbsp &nbsp &nbsp
      %th.dashboard &nbsp Description &nbsp &nbsp &nbsp &nbsp
      %th.dashboard &nbsp &nbsp Price &nbsp &nbsp &nbsp &nbsp
      %th.dashboard &nbsp &nbsp Image &nbsp &nbsp &nbsp &nbsp
      %th.dashboard{:colspan => "3"}

  %tbody.dashboard
    - @products.each do |product|

      %tr.dashboard
        %td.dashboard= product.title 
        %td.dashboard= product.description 
        %td.dashboard= product.price 
        %td.dashboard= cl_image_tag product.image.key , width: '50px', height: '50px' 
        %td.dashboard= link_to 'Show', product, class: 'btn btn-primary show'
        %td.dashboard= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary edit'
        %td.dashboard= link_to 'Destroy', product, :method => :delete,  class: 'btn btn-primary delete', data: { confirm: 'Are you sure?' }
%br
= link_to 'New Product', new_product_path, class: 'btn btn-primary path-new-dashboard'
%br
= link_to 'Back to Home', root_path, class: 'btn btn-primary path-new-dashboard'
