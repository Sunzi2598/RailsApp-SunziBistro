- provide(:title, 'Edit user')
%h1.update-profile Update your profile
.row
  %img.logo-image{:alt => 'Sunzi Bistro logo', :src => '/assets/logo.jpg'}/

  .col-md-6.col-md-offset-3
  
    = form_with(model: @user, local: true) do |f|
      = render 'shared/error_messages'

      = f.label :name
      = f.text_field :name, class: 'users form-control'

      = f.label :email
      = f.email_field :email, class: 'users form-control'

      = f.label :password
      = f.password_field :password, class: 'users form-control'

      = f.label :password_confirmation, 'Confirmation'
      = f.password_field :password_confirmation, class: 'users form-control'

      = f.submit 'Save changes', class: 'users btn btn-primary'
    
    .gravatar_edit
    = gravatar_for @user
    %a{:href => 'https://gravatar.com/emails', :target => "_blank"} change

= link_to 'Go Back!', root_path, class: 'btn btn-primary path-edit-user'
